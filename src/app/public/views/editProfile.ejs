<!DOCTYPE html>
<html>
<head>
    <%- include('./partials/head.ejs') %>
    <title>Home distance monitoring</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
          integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/editProfile.css">
    <link rel="stylesheet" href="../css/nav.css">
</head>
<body>

<%- include('./partials/navbar.ejs') %>

<div class="testbox">
    <form action="/">
        <h2 class="header">Edit Profile</h2>
        <div class="item">
            <p>Name</p>
            <div class="name-item">
                <input type="text" name="name" placeholder="First" value="<%= me.firstName %>"/>
                <input type="text" name="name" placeholder="Last" value="<%= me.lastName %>"/>
            </div>
        </div>
        <div class="item">
            <p>Phone</p>
            <input type="text" name="phoneNumber" value="<%= me.phoneNumber %>"/>
        </div>
        <div class="item">
            <p>Birthdate</p>
            <input type="date" name="birthdate" value="<%= me.birthdate.toISOString().substr(0, 10) %>"/>
            <i class="fas fa-calendar-alt"></i>
        </div>
        <div class="item">
            <p>Email</p>
            <input type="text" name="email" value="<%= me.email %>"/>
        </div>
        <div class="item">
            <p>Address</p>
            <input type="text" name="name" placeholder="Home Address" value="<%= me.homeAddress %>"/>
        </div>

        <button class="btn-block" type="submit">Save Changes</button>
    </form>
</div>

<footer id="footer">
    <div class="sm">
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fas fa-envelope"></i></a>
        <p class="footer-p">&COPY; Copyright 2021 COVID-19 HEALTHCARE DISTANCE SYSTEM</p>
    </div>
</footer>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script src="../js/editProfile.js"></script>
</body>
</html>
