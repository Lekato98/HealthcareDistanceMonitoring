<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>HDM | Registration</title>
    <link rel="stylesheet" href="../css/index.css">
</head>

<body>

<%- include('./partials/notification.ejs') %>
<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form id="sign-up" action="/api/v1/auth/register" method="post">
            <h1>Create Account</h1>
            <div id="sign-up-errors" style="margin: 5px;padding: 5px;color: red;"></div>
            <br>
            <input name="firstName" type="text" placeholder="First Name" required/>
            <input name="lastName" type="text" placeholder="Last Name" required/>
            <input name="nationalId" type="text" placeholder="National ID" required/>
            <input name="email" type="email" placeholder="Email" required/>
            <input name="password" type="password" placeholder="Password" required/>
            <input name="birthdate" class="date" type="date" placeholder="Birthdate" required/>
            <select name="gender">
                <option selected disabled style="display: none;">Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>


            <input name="homeAddress" type="home" placeholder="Home Address" required/>
            <input name="phoneNumber" type="phone" placeholder="Phone Number" required/>
            <br>
            <button type="submit">Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form id="sign-in" action="/api/v1/auth/login" method="post">
            <h1>Sign in</h1>
            <div id="sign-in-errors" style="margin: 5px;padding: 5px;color: red;"></div>
            <br>
            <input name="nationalId" type="text" placeholder="National ID" required/>
            <input name="password" type="password" placeholder="Password" required/>
            <button type="submit">Sign In</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="sign-in-button">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>Welcome to COVID-19 Healthcare System</p>
                <button class="ghost" id="sign-up-button">Sign Up</button>
            </div>
        </div>
    </div>
</div>

<footer>
    <p>
        Your Trust COVID-19 Healthcare Distance Monitoring System
    </p>
</footer>
<script src="../js/registration.js"></script>
<script src="../js/socket.js"></script>
</body>

</html>
